<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_current_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizotal_margin_quize_screen"
            android:layout_marginTop="30dp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/iv_question_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginHorizontal="@dimen/horizotal_margin_quize_screen"
            android:layout_marginTop="20dp" />


        <LinearLayout
            android:id="@+id/option_a"
            style="@style/quize_option_ll_style"
            android:layout_marginHorizontal="@dimen/horizotal_margin_quize_screen"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_option"
            android:orientation="horizontal">

            <TextView
                style="@style/quize_option_no_style"
                android:background="@drawable/bg_option"
                android:backgroundTint="@color/themeOrange"
                android:text="A" />

            <TextView
                android:id="@+id/tv_option_a"
                style="@style/quize_option_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_b"
            style="@style/quize_option_ll_style"
            android:layout_marginHorizontal="@dimen/horizotal_margin_quize_screen"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_option"
            android:orientation="horizontal">

            <TextView
                style="@style/quize_option_no_style"
                android:background="@drawable/bg_option"
                android:backgroundTint="@color/themeOrange"
                android:text="B" />

            <TextView
                android:id="@+id/tv_option_b"
                style="@style/quize_option_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_c"
            style="@style/quize_option_ll_style"
            android:layout_marginHorizontal="@dimen/horizotal_margin_quize_screen"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_option"
            android:orientation="horizontal">

            <TextView
                style="@style/quize_option_no_style"
                android:background="@drawable/bg_option"
                android:backgroundTint="@color/themeOrange"
                android:text="C" />

            <TextView
                android:id="@+id/tv_option_c"
                style="@style/quize_option_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>